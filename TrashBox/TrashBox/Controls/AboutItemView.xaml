<?xml version="1.0" encoding="UTF-8"?>

<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TrashBox.Controls.AboutItemView"
    x:Name="Control"
    x:FieldModifier="private">

    <ContentView.Content>

        <StackLayout Orientation="Horizontal">

            <Image
                Source="{Binding Source={x:Reference Control}, Path=Filename}"
                HeightRequest="30"
                WidthRequest="30" />

            <Label Text="{Binding Source={x:Reference Control}, Path=Text}" />
        </StackLayout>
    </ContentView.Content>
</ContentView>